<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AbrirLocalActivity">


    <ImageButton
        android:id="@+id/btn_voltar_categoria3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:background="@drawable/voltar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logosp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="-3dp"
                android:layout_marginRight="-3dp"
                android:layout_marginBottom="0dp">


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="394dp"
                    android:layout_marginTop="340dp"
                    android:background="@color/corfundo" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="236dp"
                    android:layout_marginTop="130dp"
                    android:src="@drawable/rionegro" />

                <TextView
                    android:layout_width="287dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="34dp"
                    android:layout_marginTop="380dp"
                    android:text="Local: Palácio do Rio Negro"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"/>


                <TextView
                    android:layout_width="241dp"
                    android:layout_height="76dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginTop="410dp"
                    android:layout_marginRight="34dp"
                    android:text="Funcionamento: de terça a domingo de 09h às 17h"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"/>

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="400dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/download" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="400dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/heart2" />
                <View
                    android:id="@+id/bloco1"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="560dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/borda2" />


                <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="47dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="560dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/oculosrv" />

                <View
                    android:id="@+id/bloco2"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="490dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/borda2" />

                <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="47dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="495dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/oculosrv" />
            </FrameLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>