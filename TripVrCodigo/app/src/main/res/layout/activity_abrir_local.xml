<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AbrirLocalActivity">

    <ImageButton
        android:id="@+id/btn_voltar_categoria"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:background="@drawable/voltar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:src="@drawable/logo" />


    </FrameLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-3dp"
            android:layout_marginRight="-3dp"
            android:layout_marginBottom="0dp">

            <View
                android:layout_width="wrap_content"
                android:layout_height="394dp"
                android:layout_marginTop="340dp"
                android:background="@color/corfundo" />


            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_marginTop="400dp"
                android:layout_marginRight="80dp"
                android:background="@drawable/download" />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_marginTop="400dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/heart2" />

            <View
                android:id="@+id/bloco1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="540dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/borda2" />


            <ImageButton
                android:layout_width="65dp"
                android:layout_height="47dp"
                android:layout_gravity="right"
                android:layout_marginTop="545dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/oculosrv" />

            <View
                android:id="@+id/bloco2"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="470dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/borda2" />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="47dp"
                android:layout_gravity="right"
                android:layout_marginTop="475dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/oculosrv" />
        </FrameLayout>
    </ScrollView>
    </RelativeLayout>
</LinearLayout>