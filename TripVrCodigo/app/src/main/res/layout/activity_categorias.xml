<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CategoriasActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:src="@drawable/logo" />

        <ImageButton
            android:id="@+id/btn_voltar_principal"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:background="@drawable/voltar" />


    </FrameLayout>


    <SearchView
        android:id="@+id/buscaLocal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/borda2"
        android:padding="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="220dp"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_palace"
                        android:layout_width="156dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:background="@drawable/borda2"
                        android:src="@drawable/palace"
                        tools:src="@drawable/palace" />

                    <Spinner
                        android:id="@+id/spinnerPalacios"
                        android:layout_width="203dp"
                        android:layout_height="match_parent"
                        android:entries="@array/spinnerPalacios"
                        android:paddingLeft="20dp"
                        android:textSize="20sp"
                        android:textStyle="bold">

                    </Spinner>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_teatros"
                        android:layout_width="156dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:background="@drawable/borda2"
                        android:src="@drawable/teatro"
                        tools:src="@drawable/teatro" />

                    <Spinner
                        android:id="@+id/spinnerTeatros"
                        android:layout_width="203dp"
                        android:layout_height="match_parent"
                        android:entries="@array/spinnerTeatros"
                        android:paddingLeft="20dp"
                        android:textSize="20sp"
                        android:textStyle="bold">

                    </Spinner>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_Parques"
                        android:layout_width="156dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:background="@drawable/borda2"
                        android:src="@drawable/park"
                        tools:src="@drawable/park"></ImageView>

                    <Spinner
                        android:id="@+id/spinnerParques"
                        android:layout_width="203dp"
                        android:layout_height="match_parent"
                        android:entries="@array/spinnerParques"
                        android:paddingLeft="20dp"
                        android:text="Palacios"
                        android:textSize="20sp"
                        android:textStyle="bold">

                    </Spinner>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_Museus"
                        android:layout_width="156dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:background="@drawable/borda2"
                        android:src="@drawable/image0"
                        tools:src="@drawable/image0"></ImageButton>

                    <Spinner
                        android:id="@+id/spinnerMuseus"
                        android:layout_width="203dp"
                        android:layout_height="match_parent"
                        android:entries="@array/spinnerMuseus"
                        android:paddingLeft="20dp"
                        android:textSize="20sp"
                        android:textStyle="bold">

                    </Spinner>

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</RelativeLayout>