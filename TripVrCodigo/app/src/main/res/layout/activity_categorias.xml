<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CategoriasActivity">

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:src="@drawable/logo" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/blocoBusca"
            android:layout_width="387dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/borda2"/>

        <SearchView
            android:id="@+id/buscaLocal"
            android:layout_width="388dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:padding="16dp">

        </SearchView>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginVertical="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="20dp">
            <ImageView
                android:id="@+id/btn_palace"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:src="@drawable/palace"></ImageView>

                <Spinner
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:text="Palacios"
                    android:textSize="30dp"
                    android:textStyle="bold"></Spinner>

            </LinearLayout>

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20dp">

            <ImageView
                android:id="@+id/btn_teatros"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                tools:src="@drawable/teatro"></ImageView>

                <Spinner
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:text="Teatros"
                    android:textSize="30dp"
                    android:textStyle="bold"></Spinner>

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="20dp">

                <ImageView
                    android:id="@+id/btn_Parques"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    tools:src="@drawable/park"></ImageView>

                <Spinner
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:text="Parques"
                    android:textSize="30dp"
                    android:textStyle="bold"></Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="20dp">

                <ImageView
                    android:id="@+id/btn_Museus"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    tools:src="@drawable/image0"></ImageView>

                <Spinner
                    android:layout_width="204dp"
                    android:layout_height="match_parent"
                    android:text="Museus"
                    android:textSize="30dp"
                    android:textStyle="bold"></Spinner>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    </ScrollView>
</LinearLayout>